<h1>Books</h1>

<% @books.each do |book| %>
  <h2><%= book.title %></h2>
  <h3>Author: <%= book.author %></h3>
  <p>Is the genre fiction?: <%= book.fiction %></p>
  <p>MSRP: <%= book.cost %></p>
  <p>Published: <%= book.date_published %></p>
  <p>Last Sold: <%= book.last_sold %></p>
  <p><%= button_to "Update Book", "/books/#{book.id}/edit", method: :get %></p>
  <% end %>

<%= link_to "Create Book", "/bookstores/#{@bookstore.id}/books/new" %>
<%= link_to 'Sort books by alphabetical order', "/bookstores/#{@bookstore.id}/books?sorted=true" %>

<h4>Limit Responses</h4>
<%= form_with url: "/bookstores/#{@bookstore.id}/books", method: :get, data: {turbo:false} do |form| %>
  <%= form.hidden_field :sort, value: "threshold" %>
  <%= form.label :threshold_value, "Limit" %></br>
  <%= form.number_field :threshold_value %></br>
  <br><%= form.submit "Only return records of books that cost more than inputted value" %></br>
<% end %>


