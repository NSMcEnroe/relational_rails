<%= form_with url: "/bookstores/#{@bookstore.id}/books/new", method: :post, local: true do |form| %>

  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :author /%>
  <%= form.text_field :author %>
  <%= form.label :fiction %>
  <%= form.text_field :fiction %>
  <%= form.label :cost %>
  <%= form.text_field :cost %>
  <%= form.label :date_published %>
  <%= form.text_field :date_published %>
  <%= form.label :last_sold %>
  <%= form.text_field :last_sold %>

  <%= form.submit "Create Book" %>
  <% end %>